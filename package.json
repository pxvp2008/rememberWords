{
  "name": "rememberwords",
  "version": "1.0.2",
  "description": "基于艾宾浩斯遗忘曲线的智能学习计划工具",
  "main": "dist-electron/main.js",
  "homepage": "https://github.com/pxvp2008/rememberWords",
  "author": {
    "name": "pxvp",
    "email": "pxvp2008@gmail.com"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "dev:prod": "vite --mode production",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:check": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "preview:prod": "vite preview --port 3000 --host",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "config:validate": "node -e \"console.log('Config validation passed')\"",
    "config:show": "node -e \"try { const fs = require('fs'); const config = JSON.parse(fs.readFileSync('config/app.json', 'utf8')); console.log(JSON.stringify(config, null, 2)); } catch(e) { console.error('Config error:', e.message); }\"",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3001 && cross-env NODE_ENV=development electron .\"",
    "electron:dev:debug": "concurrently \"npm run dev\" \"wait-on http://localhost:3080 && cross-env NODE_ENV=development DEBUG=true electron .\"",
    "electron:build": "node scripts/update-build-config.js && npm run build && tsc -p electron/tsconfig.json && electron-builder",
    "electron:build:dev": "node scripts/update-build-config.js && npm run build:dev && tsc -p electron/tsconfig.json && electron-builder --config.directories.output=release-dev",
    "electron:pack": "node scripts/update-build-config.js && npm run build && tsc -p electron/tsconfig.json && electron-builder --dir",
    "electron:dist": "npm run electron:build && electron-builder --publish=never",
    "electron:build:win": "node scripts/build-windows.cjs",
    "electron:build:mac": "node scripts/update-build-config.js && npm run build && tsc -p electron/tsconfig.json && electron-builder --mac --publish=never",
    "icon:generate": "npx electron-icon-builder --input=assets/logos/logo_1_y.png --output=assets/icons",
    "icon:copy": "cp assets/icons/icons/win/icon.ico assets/icons/icon.ico && cp assets/icons/icons/mac/icon.icns assets/icons/icon.icns",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "echarts": "^6.0.0",
    "element-plus": "^2.4.4",
    "vue": "^3.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.1.1",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.rememberwords.app",
    "productName": "RememberWords",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*",
      "config/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/electron/entitlements.mac.plist",
      "entitlementsInherit": "assets/electron/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "executableName": "RememberWords",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "dmg": {
      "title": "RememberWords 1.0.2",
      "icon": "assets/icons/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}